<%# <%= @posts.inspect %> 
<div class="justify-items-center">

  <h1>Home</h1>

  <hr class="m-6">

  <button class="border rounded-xl h-16 w-8/12 mx-44 p-2 dark:bg-zinc-700 dark:border-zinc-700 shadow-md">
    <%= link_to 'Create post', new_post_path %>
  </button>

  <hr class="my-6 mx-10">

  <% @posts.each do |post| %>

  <article class="border rounded-xl p-2 m-4 dark:bg-zinc-700 dark:border-zinc-700 shadow-md">

      <div class="flex justify-between">
        <h2><%= post.title %></h2>

        <time datetime="<%= post.formatted_created_at%>" class="self-end">
          <%= post.formatted_created_at%>
        </time>

      </div>

      <h3><%= post.body %></h3>

      <br>

      <button class="border rounded p-2 border-purple-500">
        <%= link_to 'Edit', edit_post_path(post)%>
      </button>

      <button class="border rounded p-2 border-purple-500">
        <%= link_to 'Show', post_path(post) %>
      </button>

      <button class="border rounded p-2 border-purple-500">
        <%= link_to 'Destroy', post_path(post), data: { method: :delete }, class: "text-red-500"%>
      </button>

    </article>
  <% end %>

</div>