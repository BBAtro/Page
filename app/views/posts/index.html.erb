<%# <%= @posts.inspect %> 
<% provide :page_title, "Posts" %>
<% currently_at 'Posts'%>

<div class="flex flex-col justify-items-center">

      <%= link_to 'Create post', new_post_path, class: "border rounded-xl h-12 w-6/12 mx-auto my-4 p-2 text-center dark:bg-zinc-700 dark:border-zinc-700 shadow-md" %>

    <hr class="my-3 mx-10">

  <% @posts.each do |post| %>

  <article class="border rounded-xl p-2 m-4 dark:bg-zinc-700 dark:border-zinc-700 shadow-md">

      <div class="flex justify-between">
        <h2><%= post.title %></h2>

        <time datetime="<%= post.formatted_created_at%>" class="self-end">
          <%= post.formatted_created_at%>
        </time>

      </div>

      <h3><%= post.body %></h3>

      <br>

      <button class="border rounded p-2 border-purple-500">
        <%= link_to 'Edit', edit_post_path(post)%>
      </button>

      <button class="border rounded p-2 border-purple-500">
        <%= link_to 'Show', post_path(post) %>
      </button>

      <button class="border rounded p-2 border-purple-500">
        <%= link_to 'Destroy', post_path(post), data: { method: :delete }, class: "text-red-500"%>
      </button>

    </article>
  <% end %>

</div>