<%= form_with model: @user do |f|%>
  <div class="flex flex-col justify-items-center">

      <%= f.label :email, class: "p-3 text-2xl mx-auto" %>
      <%= f.email_field :email, required: true, minlength: 2, class: "border rounded-xl w-11/12 p-3 mx-auto text-xl dark:bg-zinc-700 dark:border-zinc-700 shadow-md"%>

      <%= f.label :login, class: "p-3 text-2xl mx-auto" %>
      <%= f.text_field :login, required: true, minlength: 2, class: "border rounded-xl w-11/12 p-3 mx-auto text-xl dark:bg-zinc-700 dark:border-zinc-700 shadow-md"%>

      <%= f.label :password, class: "p-3 text-2xl mx-auto" %>
      <%= f.password_field :password, required: true, minlength: 2, class: "border rounded-xl w-11/12 p-3 mx-auto text-xl dark:bg-zinc-700 dark:border-zinc-700 shadow-md"%>

      <%= f.label :password_confirmation, class: "p-3 text-2xl mx-auto" %>
      <%= f.password_field :password_confirmation, required: true, minlength: 2, class: "border rounded-xl w-11/12 p-3 mx-auto text-xl dark:bg-zinc-700 dark:border-zinc-700 shadow-md"%>

      <%= f.submit "Submit",
        class: 'border rounded-xl w-1/4 p-2 mx-auto my-5 bg-sky-400 shadow-sky-400 border-sky-400 dark:bg-pink-500 dark:border-pink-500 dark:shadow-pink-500 shadow'%>
  </div>
<% end %>
